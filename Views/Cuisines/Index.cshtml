@{
    Layout = "_Layout";
}

@using Food.Models;

<h2>Cuisine Tracker</h2>
@if (Model.Count == 0)
{
    <h3>No Cuisine have been added yet!</h3>
}

@foreach (Cuisine cuisine in Model)
{
    <li>@Html.ActionLink($"{ cuisine.Name }", "Details", new { id = cuisine.Id })</li>
}

<p>@Html.ActionLink("Add new Cuisine", "Create")</p>
