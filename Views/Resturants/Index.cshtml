@{
    Layout = "_Layout";
}

@using Food.Models;
@model List<Food.Models.Resturant>;
<h2>Resturants</h2>
@if (Model.Count == 0)
{
    <h3>No Resturants have been added yet!</h3>
}

@foreach (Resturant resturant in Model)
{
    <p>@resturant.Name</p>
}

<p>@Html.ActionLink("Add new Resturant", "Create")</p>
<p>@Html.ActionLink("Back to Cuisine Lists", "Index", "Cuisines")</p>
