@{
    Layout = "_Layout";
}

@using Food.Models;

<h2>Reviews</h2>
@if (Model.Count == 0)
{
    <h3>No Reviews have been added yet!</h3>
}

@foreach (Review review in Model)
{
    <li>@Html.ActionLink($"{ review.UserName }", "Details", new { id = review.Id })</li>
    <li>@review.UserName says @review.ReviewDescription</li>
}

<p>@Html.ActionLink("Add new Review", "Create")</p>
<p>@Html.ActionLink("Back to Resturant Lists", "Index", "Resturants")</p>